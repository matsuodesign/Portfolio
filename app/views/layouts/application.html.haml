!!!5
%html
  %head
    %title= "Russell Matsuo Â· " + @page_title
    = stylesheet_link_tag "application", :debug => false
    %link{:href => 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600', :rel => 'stylesheet', :type => 'text/css'}
    %meta{:name => "viewport", :content => "width=device-width, user-scalable=no, initial-scale=.7"}
  %body
    #wrapper
      #page-head
        =render 'modules/global-header'
      #hero
        #content-crop
          #content-hero
            #hero-track
              =yield :content_hero
        #information-graph
          %p#information-tags
        #information-data
          #hero-right &nbsp;
          #hero-left &nbsp;
          #information-wrapper
            #information-title
            #information-description
            #information-icons
              #icon-wrapper
                %span#desktop-icon &nbsp;
                %span#tablet-icon &nbsp;
                %span#mobile-icon &nbsp;
          %ol#slide-pagination
            %li.active Ask.com
            %li Lm-inspired.com
            %li Kudosed.com
            %li Lapsity
            %li Intervention
            %li Fine Art

      #main
        =yield :content_main
        =javascript_include_tag 'application'